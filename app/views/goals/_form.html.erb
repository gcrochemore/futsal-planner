<%= simple_form_for(@goal) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="form-group">
      <label for="FutsalGame"><%= f.label :FutsalGame %></label>
      <%= f.association :FutsalGame, label: false, input_html: { class: "form-control" } %>
    </div>
    <div class="form-group">
      <label for="team"><%= f.label :team %></label>
      <%= f.association :team, label: false, input_html: { class: "form-control" } %>
    </div>
    <div class="form-group">
      <label for="goal"><%= f.label :goal %></label>
      <%= f.input :goal, label: false, input_html: { class: "form-control" } %>
    </div>
    <div class="form-group">
      <label for="assist"><%= f.label :assist %></label>
      <%= f.input :assist, label: false, input_html: { class: "form-control" } %>
    </div>
    <div class="form-group">
      <label for="time"><%= f.label :time %></label>
      <%= f.input :time, label: false, input_html: { class: "form-control" } %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
