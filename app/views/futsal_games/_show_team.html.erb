<div class="team">
  <% sum_goal_average_by_match = 0 %>
  <% sum_assist_average_by_match = 0 %>
  <% sum_match = 0 %>
  <% team.order_by_stats.each do |player| %>
    <% sum_goal_average_by_match = sum_goal_average_by_match + player.user.andand.goal_average_by_match.to_f %>
    <% sum_assist_average_by_match = sum_assist_average_by_match + player.user.andand.assist_average_by_match.to_f %>
    <% sum_match = sum_match + player.user.andand.match_with_stats.to_f %>
    <div class="player">
      <% player_goal = futsal_game.goal_by_user(player.user).all.length %>
      <% player_assist = futsal_game.assist_by_user(player.user).all.length %>

      <%= futsal_game.has_stat ? show_game_level(player_goal, player.user.andand.goal_average_by_match.to_f, player_assist, player.user.andand.assist_average_by_match.to_f, futsal_game.duration) : "" %>

      <%= show_player(player.user) %> 

      <%= futsal_game.has_stat ? icon('futbol-o') + ' ' + player_goal.to_s + ' ' + icon('arrow-circle-right') + ' ' + player_assist.to_s : "" %> 
    </div>
  <% end %>
</div>
<%= "<strong>Moyenne de l'équipe : </strong>" + (sum_goal_average_by_match ? sum_goal_average_by_match.round(2) : '-').to_s + ' ' + icon('futbol-o') + ' ' + 
                                                (sum_assist_average_by_match ? sum_assist_average_by_match.round(2) : '-').to_s).html_safe + ' ' + icon('arrow-circle-right' %> 
                                                <%= team.length > 0 ? (sum_match / team.length) : 'NaN' %> matchs
<br>
<strong>Score théorique : </strong> <%= calculate_score(sum_goal_average_by_match, sum_assist_average_by_match) %>