<canvas id="physical_stats_chart" width="100%" height="100px"></canvas>
<script>
var ctx = document.getElementById("physical_stats_chart").getContext('2d');
var myChart = new Chart(ctx, {
    type: 'radar',
    data: {
      labels:
        [
            "Endurance",
            "Force",
            "Vitesse",
            "Coordination",
            "Souplesse",
            "Sens tactique"
        ],
      datasets: [{
        label: 'Note',
        data:
          [
              "<%= user.endurance %>",
              "<%= user.strength %>",
              "<%= user.speed %>",
              "<%= user.coordination %>",
              "<%= user.flexibility %>",
              "<%= user.tactic %>"
          ],
        borderColor: [
            'rgba(78,99,132,1)'
        ],
        borderWidth: 1
      }]
    },
    options: {
        legend: {
            position: 'top',
        },
        scale: {
          ticks: {
            min: 0,
            max: 10
          }
        }
    }
});
</script>