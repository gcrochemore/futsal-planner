<div class="row">
  <div class="col" style="width: 200px;">
    <h4>Notes par position</h4>
    <div class="col dashboard-panel-content">
       <%= render :template => 'users/_position_rating_chart', :locals => { :user => @user } %>
    </div>
  </div>
  <div class="col">
    <h4>Buts par passeurs</h4>
    <div class="col dashboard-panel-content">
      <table class="table table-hover table-sm table-bordered">
        <thead>
          <tr>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @user.goals_by_assist.each do |assist, count| %>
            <tr>
              <td>
                <%= !assist.nil? ? User.find(assist.to_i) : "<i>Pas de passeur</i>" %></td><td><%= count %> Passes
                (<%= @user.game_registrations_with.select{|key, hash| key == assist.to_i }.first.andand[1] || '?' %> m.)
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
