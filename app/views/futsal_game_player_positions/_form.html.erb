<%= simple_form_for(@futsal_game_player_position) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="form-group">
      <label for="game_registration"><%= f.label :game_registration %></label>
      <%= f.association :game_registration, label: false, input_html: { class: "form-control" } %>
    </div>
    <div class="form-group">
      <label for="futsal_position"><%= f.label :futsal_position %></label>
      <%= f.association :futsal_position, label: false, input_html: { class: "form-control" } %>
    </div>
    <div class="form-group">
      <label for="begin_time"><%= f.label :begin_time %></label>
      <%= f.input :begin_time, label: false, input_html: { class: "form-control" } %>
    </div>
    <div class="form-group">
      <label for="end_time"><%= f.label :end_time %></label>
      <%= f.input :end_time, label: false, input_html: { class: "form-control" } %>
    </div>
    <div class="form-group">
      <label for="duration"><%= f.label :duration %></label>
      <%= f.input :duration, label: false, input_html: { class: "form-control" } %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
