<h1><%= t('.title') %><span class="badge"><%= @futsal_game_player_positions.count %></span></h1>

<div class="row">
  <div class="col-2">
    <legend class="filter-title"><%= t :search_title %></legend>
    <fieldset class="filter-panel">
      <%= search_form_for @q do |f| %>

        <%= f.search_field :game_registration_futsal_game_id_cont, {placeholder: t('activerecord.attributes.futsal_game_player_position.game_registration')} %>

        <%= f.search_field :futsal_position_name_cont, {placeholder: t('activerecord.attributes.futsal_game_player_position.futsal_position')} %>

        <%= f.search_field :begin_time_cont, {placeholder: t('activerecord.attributes.futsal_game_player_position.begin_time')} %>

        <%= f.search_field :end_time_cont, {placeholder: t('activerecord.attributes.futsal_game_player_position.end_time')} %>

        <%= f.search_field :duration_cont, {placeholder: t('activerecord.attributes.futsal_game_player_position.duration')} %>

        <br>
        <br>
        <%= f.submit class: 'btn btn-search-filter btn-sm btn-outline-primary' %>
      <% end %>
    </fieldset>
  </div>
  <div class="col">
    <div class="col-md-3 btn-new-top">
      <% if can? :create, FutsalGamePlayerPosition %>
        <%= link_to (icon('plus') + " " + t('.new_button')).html_safe, url_for(action: :new), class: "btn btn-sm btn-outline-primary" %>
      <% end %>
    </div>
    <table class="table table-hover table-sm table-bordered">
      <thead>
        <tr>
    
          <th><%= sort_link(@q, :game_registration_futsal_game_id, default_order: :asc) %></th>
    
          <th><%= sort_link(@q, :futsal_position_name, default_order: :asc) %></th>
    
          <th><%= sort_link(@q, :begin_time, default_order: :asc) %></th>
    
          <th><%= sort_link(@q, :end_time, default_order: :asc) %></th>
    
          <th><%= sort_link(@q, :duration, default_order: :asc) %></th>
    
          <th><%= sort_link(@q, :calculated, default_order: :asc) %></th>
    
          <th class="col-xs-1"></th>
        </tr>
      </thead>

      <tbody>
        <% @futsal_game_player_positions.each do |futsal_game_player_position| %>
          <tr>
    
            <td><%= futsal_game_player_position.game_registration %></td>
    
            <td><%= futsal_game_player_position.futsal_position %></td>
    
            <td><%= futsal_game_player_position.begin_time %></td>
    
            <td><%= futsal_game_player_position.end_time %></td>
    
            <td><%= futsal_game_player_position.duration %></td>
    
            <td><%= futsal_game_player_position.calculated %></td>
    
            <td>
              <%= link_to icon('eye').html_safe, futsal_game_player_position %>
              <% if can? :edit, FutsalGamePlayerPosition %>
                <%= link_to icon('pencil').html_safe, edit_futsal_game_player_position_path(futsal_game_player_position) %>
              <% end %>
              <% if can? :destroy, FutsalGamePlayerPosition %>
                <%= link_to icon('times').html_safe, futsal_game_player_position, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @futsal_game_player_positions %>
  </div>
</div>