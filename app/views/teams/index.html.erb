<h1><%= t('.title') %><span class="badge"><%= @teams.count %></span></h1>

<div class="row">
  <div class="col-md-4">
    <legend class="filter-title"><%= t :search_title %></legend>
    <fieldset class="filter-panel">
      <%= search_form_for @q do |f| %>

        <%= f.search_field :name_cont, {placeholder: t('activerecord.attributes.team.name')} %>

        <%= f.search_field :company_name_cont, {placeholder: t('activerecord.attributes.team.company')} %>

        <br>
        <br>
        <%= f.submit class: 'btn btn-default btn-search-filter' %>
      <% end %>
    </fieldset>
  </div>
  <div class="col-md-8">
    <div class="col-md-3 btn-new-top">
      <% if can? :create, Team %>
        <%= link_to ('<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> '+t('.new_button')).html_safe, url_for(action: :new), class: "btn btn-default" %>
      <% end %>
    </div>
    <table class="table table-hover table-condensed table-bordered">
      <thead>
        <tr>
    
          <th><%= sort_link(@q, :name, default_order: :asc) %></th>
    
          <th><%= sort_link(@q, :company, default_order: :asc) %></th>
    
          <th class="col-xs-1"></th>
        </tr>
      </thead>

      <tbody>
        <% @teams.each do |team| %>
          <tr>
    
            <td><%= team.name %></td>
    
            <td><%= team.company.andand.name %></td>
    
            <td>
              <%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, team %>
              <% if can? :edit, Team %>
                <%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe, edit_team_path(team) %>
              <% end %>
              <% if can? :destroy, Team %>
                <%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe, team, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @teams %>
  </div>
</div>