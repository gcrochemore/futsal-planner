<%= simple_form_for(@futsal_trophy) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="form-group">
      <label for="name"><%= f.label :name %></label>
      <%= f.input :name, label: false, input_html: { class: "form-control" } %>
    </div>
    <div class="form-group">
      <label for="points"><%= f.label :points %></label>
      <%= f.input :points, label: false, input_html: { class: "form-control" } %>
    </div>
    <div class="form-group">
      <label for="description"><%= f.label :description %></label>
      <%= f.input :description, label: false, input_html: { class: "form-control" } %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
