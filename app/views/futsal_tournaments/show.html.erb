<p id="notice"><%= notice %></p>
<div class="match_header">
  <div class="row">
    <div class="col date">
      <%= @futsal_tournament.date.strftime("%d/%m/%Y %H:%M") %>
    </div>
    <div class="col duration">
      <%= Time.at(@futsal_tournament.duration * 60).utc.strftime("%H:%M:%S") %>
    </div>
    <div class="col futsal_field">
      <%= @futsal_tournament.futsal_field.andand.name %>
    </div>
  </div>
</div>



<div class="row goal_tab">
  <div class="col-sm-12 col-md-3">
    <div class="tournament_team">Team 1</div>
    <%= render 'futsal_games/show_team', team: @futsal_tournament.team_player(3), futsal_game: @futsal_tournament %>
    <hr>
    <div class="tournament_team">Team 2</div>
    <%= render 'futsal_games/show_team', team: @futsal_tournament.team_player(4), futsal_game: @futsal_tournament %>
  </div>
  <div class="col-sm-12 col-md-6">
    <% @futsal_tournament.futsal_games.each do |futsal_game| %>
      <div class="tournament_match_header">
        <%= futsal_game %> : <%= futsal_game.score_home %> - <%= futsal_game.score_outside %> <%= link_to icon('eye').html_safe, futsal_game, target: "_blank" %>
      </div>
      <%= render 'futsal_games/show_highlights_and_goals', futsal_game: futsal_game %> 
    <% end %>
  </div>
  <div class="col-sm-12 col-md-3">
    <div class="tournament_team">Team 3</div>
    <%= render 'futsal_games/show_team', team: @futsal_tournament.team_player(7), futsal_game: @futsal_tournament %>
    <hr>
    <div class="tournament_team">Team 4</div>
    <%= render 'futsal_games/show_team', team: @futsal_tournament.team_player(8), futsal_game: @futsal_tournament %>
  </div>
</div>

